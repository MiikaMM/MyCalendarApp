    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/toolbar_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/toolbar_display_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1990"
                android:textSize="24sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/prev_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="monthScrollClicked"
                    android:text="Prev" />

                <TextView
                    android:id="@+id/toolbar_display_month"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:gravity="center"
                    android:text="December"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="monthScrollClicked"
                    android:text="Next" />
            </LinearLayout>

            <TextView
                android:id="@+id/toolbar_display_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="23rd"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/toolbar_display_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Friday"
                android:textSize="18sp" />

            <Button
                android:id="@+id/toolbar_display_todayButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Go To Today"
                android:textSize="14sp" />
        </LinearLayout>

